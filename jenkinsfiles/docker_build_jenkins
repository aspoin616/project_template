#!groovy
//check properties
properties([disableConcurrentBuilds()])

pipeline {
    agent{
       label 'master'
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    triggers { pollSCM('* * * * *') }
    stages {
        stage("docker login"){
            steps{
                echo "=======docker login========"
                withCredentials([usernamePassword(credentialsId: '177537cd-c8e7-4b7f-adaf-2320dd8fc3b2', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]){
                    sh """
                    docker login -u $USERNAME -p $PASSWORD
                    """
                }
            }
        }
        stage("create docker image") {
            steps {
                echo "======================start building image=============="
                dir ('docker/toolbox'){
                sh 'docker build -t vkuznetcov/toolbox:latest . '
                }
            }
        }
        stage("docker push") {
            steps {
                echo "=========start pushing image+++++"
                sh '''
                docker push vkuznetcov/toolbox:latest
                '''
            }
        }
    }
}
